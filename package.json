{
  "name": "domain-empire",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NEXT_PUBLIC_INLINE_WORKER=1 bash -lc 'if [ \"${DISABLE_INLINE_WORKER:-0}\" = \"1\" ]; then exec next dev; fi; npx -y tsx src/scripts/worker.ts & WORKER_PID=$!; trap \"kill ${WORKER_PID}\" EXIT INT TERM; exec next dev'",
    "dev:web": "next dev",
    "build": "NODE_ENV=production NODE_OPTIONS=--max-old-space-size=3072 next build",
    "start": "next start",
    "lint": "eslint",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "worker": "npx -y tsx src/scripts/worker.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
